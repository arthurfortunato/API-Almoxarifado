{
  "compilerOptions": {
    "target": "es6",
    "module": "ESNext",
    "rootDir": "./src",
    "outDir": "./build",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitReturns": false,
    "strict": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "experimentalDecorators": true,
    "skipLibCheck": true,      
    "forceConsistentCasingInFileNames": true ,
    "typeRoots": [
      "./src/@types/",
      "./node_modules/@types/"
    ]
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}